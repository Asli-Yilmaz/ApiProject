@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan Alan İşlemleri</h4>                        
                    </div> 
                    <div class="card-body">
                        <p class="card-text">Tema bütünlüğünün bozulmaması adına sadece 1 tane öne çıkan alan bilgisi eklenebilir</p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Subtitle</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success" />Güncelle</td>
                                        <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger" />Sil</td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        @if(count==0){
                            <a href="/Feature/CreateFeature/" class="btn btn-info">Yeni Feature Ekle</a>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


