@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hizmet Ekle</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Hizmet Adı</label>
                            <input type="text" asp-for="ServiceTitle" class="form-control" />
                            <br />
                            <label>Açıklaması</label>
                            <input type="text" asp-for="ServiceDescription" class="form-control" />
                            <br />
                            <label>Icon URL</label>
                            <input type="text" asp-for="IconUrl" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Hizmet Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

