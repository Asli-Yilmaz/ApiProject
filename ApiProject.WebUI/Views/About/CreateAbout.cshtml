@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımızda Alanı Ekleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />                           
                            <label>Görsel URL (Embed Link)</label>
                            <input type="text" asp-for="ImageURL" class="form-control" />
                            <br />
                            <label>Video Kapak Görseli URL (Embed Link)</label>
                            <input type="text" asp-for="VideoCoverImageURL" class="form-control" />
                            <br />
                            <label>Video URL (Embed Link)</label>
                            <input type="text" asp-for="VideoURL" class="form-control" />
                            <br />    
                            <label>Rezervasyon Numarası</label>
                            <input type="text" asp-for="ReservetionNumber" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                            <br />
                            <button class="btn btn-primary">Hakkımızda Alanı Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
